{
  "lib": [
    "ES2021"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ES2020",
    "target": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
  },
  "include": [
    "src/**/*"
  ]
}